@model Product

<h1>Details</h1>

<hr />

<div class="row">
    <dl class="col-sm-2">
        @Html.DisplayNameFor(model =>model.Title)
    </dl>
    <dl class="col-sm-10">
        @Html.DisplayFor(model =>model.Title)
    </dl>

    <dl class="col-sm-2">
        @Html.DisplayNameFor(model =>model.Description)
    </dl>
    <dl class="col-sm-10">
        @Html.DisplayFor(model =>model.Description)
    </dl><dl class="col-sm-2">
        @Html.DisplayNameFor(model =>model.Price)
    </dl>
    <dl class="col-sm-10">
        @Html.DisplayFor(model =>model.Price)
    </dl><dl class="col-sm-2">
        @Html.DisplayNameFor(model =>model.Quantity)
    </dl>
    <dl class="col-sm-10">
        @Html.DisplayFor(model =>model.Quantity)
    
        </dl>

        <dl class="col-sm-6">
            @if(string.IsNullOrEmpty(Model.ImageName))
            {
            <img decoding="async" src="@("~/images/webshop.JPG")" asp-append-version="true" />
            }

            else{

            <img decoding="async" src="@("~/images/"+Model.ImageName)" asp-append-version="true"/>

        }
        
        </dl>


</div>

<div>


    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
    <a asp-action="Index" class="btn btn-primary">Back to product list</a>

</div>


