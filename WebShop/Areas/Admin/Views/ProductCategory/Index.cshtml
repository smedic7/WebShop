@model IEnumerable<ProductCategory>

<h4>Product categories</h4>

<p>
    <a asp-action="Create" asp-route-productid=@ViewBag.ProductId>Add new category to product</a>
</p>

<table class="table">

</thead>
    <tr>
        <th>Id</th>
        <th>Product</th>
        <th>Category</th>



    </tr>


    <thead>

        <tbody>

            @foreach (var item in Model)
            {
                
                <tr>

                    <td>@item.Id</td>
                    <td>@item.ProductName</td>
                    <td>@item.CategoryName</td>
                    <td>

                    <a asp-action="Edit" asp-route-id="@item.Id" asp-route-productId="@item.ProductId" class="btn btn-success">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" asp-route-productId="@item.ProductId" class="btn btn-danger">Delete</a>

                    </td>


                </tr>




            }


        </tbody>

</table>

<a asp-controller="Product" asp-action="Index" class="btn btn-light">Back to products</a>