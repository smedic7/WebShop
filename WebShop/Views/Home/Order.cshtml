@model List<CartItem>


<div class="text-center">
    <h1 class="display-h4">
        Place your order
    </h1>



</div>




<div class="container">
    <div class="row">
        <div class="col-md-12">

            <table class="table">

                <thead>
                    <tr>
                        <th></th>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>





                    </tr>



                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>
                                <a class="btn btn-sm btn-danger" asp-action="RemoveFromCart" asp-route-productId="@item.Product.Id">Remove</a>

                            </td>
                            <td>@item.Product.Title</td>
                            <td>@item.Product.Price.ToString("0.00")</td>
                            <td>@item.Quantity</td>
                            <td>@item.GetTotal().ToString("0.00")</td>


                        </tr>






                    }

                    <tr>

                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>

                            <strong>Total price: @ViewBag.TotalPrice.ToString("0.00")</strong>


                        </td>




                    </tr>




                </tbody>

            </table>

        </div>

    </div>
</div>